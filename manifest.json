{
    "manifest_version": 3,
    "name": "dimterex extension",
    "action": {
        "default_icon": "icons/32.png",
        "default_popup": "html/popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "description": "Extension ",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus",
        "webNavigation",
        "tabs",
        "scripting",
        "clipboardRead",
        "nativeMessaging"
    ],
    "background": {
        "service_worker": "content-scripts/context_menu.js",
        "scripts": [
            "content-scripts/context_menu.js"
        ]
    },
    "host_permissions": [
        "*://*/*",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": ["css/main.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "content-scripts/elements.js", 
            "content-scripts/confluence.js", 
            "content-scripts/tables.js", 
            "content-scripts/save_changes.js"
        ],
        "run_at": "document_end",
        "css": ["css/main.css"]
    }],
    "version": "0.1.0"
}
